{
  "compilerOptions": {
    "rootDir": "src",
    "module": "commonjs",
    "target": "es2017",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./build",
    "moduleResolution": "node",
    "sourceMap": true,
    "typeRoots": ["@types", "node_modules/@types"]
  }
}
